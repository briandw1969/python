from tkinter import *


root = Tk()
root.title("Calculator")
root.geometry("400x200")

# Defining the math 
def sub():
    input_num = input.get() # users submission
    answer = int(input_num) / 3 # the math make sure to make string an int
    
    
    # answer label
    answer_label = Label(root, text=answer)
    answer_label.grid(row=0, column=5)
    
    ###################################### everything above this is the function


# Users input
input = Entry(root, width=15)
input.grid(row=0, column=1)
# Self Explanatory  
input_label = Label(root, text="Enter Number Here")
input_label.grid(row=0, column=0)

# AND the Answer is..
text_label = Label(root, text="And the Result Is...")
text_label.grid(row=0, column=2)

# Submit button   
sub_btn = Button(root, text="Submit Your Number", command=sub)
sub_btn.grid(row=4, column=2, columnspan=2, padx=10, pady=10)
    
    
    
root.mainloop(),
